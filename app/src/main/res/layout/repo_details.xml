<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/fullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:text="1"
        android:textStyle="bold"
        android:textSize="25dp"
        />

    <TextView
        android:id="@+id/msg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fullName"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="2"
        android:textStyle="normal"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/msg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/msg1"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="3"
        android:textStyle="normal"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/msg3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/msg2"
        android:layout_marginTop="30dp"
        app:layout_goneMarginTop="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="4"
        android:textStyle="normal"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/msg4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/msg3"
        android:layout_marginTop="30dp"
        app:layout_goneMarginTop="30dp"
        android:paddingLeft="20dp"
        android:autoLink="web"
        android:textColorLink="#205DC6"
        android:paddingRight="20dp"
        android:text="5"
        android:textStyle="normal"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/msg5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/msg4"
        android:layout_marginTop="30dp"
        app:layout_goneMarginTop="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="6"
        android:textStyle="normal"
        android:autoLink="web"
        android:textSize="15dp"
        android:textColorLink="#205DC6"
        />

    <TextView
        android:id="@+id/msg6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/msg5"
        android:layout_marginTop="30dp"
        app:layout_goneMarginTop="30dp"
        android:autoLink="web"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="7"
        android:textStyle="normal"
        android:textColorLink="#205DC6"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/msg7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/msg6"
        android:layout_marginTop="30dp"
        app:layout_goneMarginTop="30dp"
        android:paddingLeft="20dp"
        android:autoLink="web"
        android:paddingRight="20dp"
        android:text="8"
        android:textStyle="normal"
        android:textSize="15dp"
        android:textColorLink="#205DC6"
        />

    <TextView
        android:id="@+id/msg9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/msg7"
        android:layout_marginTop="30dp"
        app:layout_goneMarginTop="30dp"
        android:paddingLeft="20dp"
        android:autoLink="web"
        android:paddingRight="20dp"
        android:text="9"
        android:textStyle="normal"
        android:textSize="15dp"
        android:textColorLink="#205DC6"
        />

</androidx.constraintlayout.widget.ConstraintLayout>